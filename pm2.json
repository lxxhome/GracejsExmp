{
  "apps": [{
    "name": "server",
    "script": "bin/server.js",
    "args": "--env=production --port=3000",
    "instances": "max",
    "exec_mode": "cluster",
    "error_file": "log/server.error.log",
    "out_file": "log/server.access.log",
    "merge_logs": true,
    "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
    "kill_timeout": 5000
  }]
}
